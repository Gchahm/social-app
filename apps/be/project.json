{
  "name": "be",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/be/src",
  "projectType": "application",
  "tags": [
    "app"
  ],
  "targets": {
    "generate-env": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/be",
        "command": "node generate-env.js"
      }
    },
    "synth": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/be",
        "command": "cdk synth"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/be",
        "command": "cdk deploy --all --outputs-file ../photos-fe/outputs.json --require-approval never"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/be",
        "command": "sam local start-api --template cdk.out/BEStack.template.json --env-vars env.json --warm-containers EAGER"
      }
    },
    "dev:watch": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/be",
        "command": "npx nodemon --watch src --watch infra --ext ts --exec 'cdk synth'"
      }
    }
  }
}
